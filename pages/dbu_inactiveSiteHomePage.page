<apex:page id="CommunityInMaintenance" standardStylesheets="false" sideBar="false" showHeader="false" applyHtmlTag="true" applyBodyTag="false">
   <html lang="en">

<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Cummins - Under Maintenance </title>
    <style>
        html,
        body,
        body * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Helvetica Neue', sans-serif;
            padding: 0;
            margin: 0;
            align-items: center;
            display: flex;
            justify-content: center;
            height: 100vh;
            color: #000;
            font-size: 14px;

        }

        /*linear-gradient(175deg, rgba(187,209,222,1) 0%, rgba(202,220,230,1) 49%, rgba(213,230,237,1) 100%)*/
        .content {
            text-align: left;
            width: 720px;
            height: 400px;
            background-color: #326698;
            background-image: url('https://csodev-cumminscss.cs90.force.com/resource/1615979274000/dbu_cumminsMaintenance/cummins.png');
            border-radius: 5px;
            display: flex;
            align-items: center;
            max-width: 100%;
            background-repeat: no-repeat;
            justify-content: flex-start;
            padding-left: 330px;
            color: #fff;
            background-size: contain;
            border-top: 20px solid #326698;
            padding-right: 16px;
        }

        .content a {
            color: #fff;
        }
        .content sup{
        font-size:50%;}

        .plug {
            width: 492px;
            border-radius: 0 0 100% 100px;
        }

        h1 {
            margin: 0;
            font-size: 22px;
        }

        h3 {
            font-size: 18px;
        }

        a {
            color: #000;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .logo {
            margin-bottom: 30px;
        }

        .link {
            text-decoration: underline;
        }

        .link:hover {
            text-decoration: none;
        }
  

        @media only screen and (max-width: 640px) {

            .content {
                width: 100% !important;
                padding: 260px 0 0 16px !important;
                margin: 16px;
            }

            .plug {
                width: 100% !important;
            }

            h1 {
                margin: 0 !important;
                font-size: 18px !important;
            }

            h3 {
                margin: 5px 0 10px !important;
                font-size: 16px !important;
            }

            p {
                margin: 5px 0;
                font-size: 12px;
            }
        }

        @media only screen and (max-width: 374px) {

            .content {

                padding: 210px 0 10px 16px !important;
                height: auto;
            }

            .plug {
                width: 100% !important;
            }

            h1 {
                font-size: 14px !important;
            }

            h3 {
                font-size: 13px !important;
            }

            p {
                margin: 5px 0;
                font-size: 10px;
            }
        }
    </style>
</head>

